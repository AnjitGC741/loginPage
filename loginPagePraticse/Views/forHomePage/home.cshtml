
@{
    ViewBag.Title = "home";
    Layout = null;
}

<html>
<head>
    <title>Home page</title>
    <link rel="stylesheet" href="~/Content/forHomePage/forHome1.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Signika+Negative:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    @*navbar design begins*@
    <div class="navbar1">
        <div class="forLogo">
            <img src="~/Content/forHomePage/gameland.jpg" alt="logo" />
        </div>
        <div class="forTopic">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Product</a></li>
                <li><a href="#">Cart</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">About Us</a></li>
            </ul>
        </div>
        <div class="forLogOut">
            <button type="button" class="btn btn-secondary"><a href="@Url.Action("loginPage","Sugarcane")"> Sign Out</a></button>
        </div>

    </div>
    @*navbar desing ends*@
    @*contain 1 div begins*@
    <div class="contain1">

        <button><a href="@Url.Action("loginPage","Sugarcane")"> Order Now</a></button>
    </div>
    @*contain 1 div ends*@
    @*special offer contain starts*@
    <div class="specialOfferText">
        <p>Special Offers</p>
    </div>
    <div class="owl-carousel owl-theme" id="specialOfferContent">
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/forHomePage/newrdr23.jpg" alt="image" />
            </div>
            <div class="forPrice">
                <div class="specialOfferName">
                    <p>Red Dead Redemption II</p>
                </div>
                <div class="specialOfferPrice">
                    <div class="originalPrice">
                        <p style=" color: #696969;"><s>Rs 1500</s></p>
                    </div>
                    <div class="offeredPrice">
                        <p style="color:red">Rs 1000</p>
                    </div>
                    </div>
                <div class="specialOfferCart">
                    <button style="font-size: 20px; background-color: #696969;color:white;">Add To Cart <i class="fa fa-shopping-cart" style="color:white ;"></i></button>
                </div>
            </div>
        </div>
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/forHomePage/squidGame.jpg" alt="image" />
            </div>
            <div class="forPrice">

            </div>
        </div>
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/image/fifa.jpg.jpg" alt="image" />
            </div>
            <div class="forPrice">

            </div>
        </div>
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/forHomePage/Ghost of Tsushima 2020 4K Ultra HD Mobile Wallpaper.jpg" alt="image" />
            </div>
            <div class="forPrice">

            </div>
        </div>
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/forHomePage/pubg.jpg" alt="image" />
            </div>
            <div class="forPrice">

            </div>
        </div>
        <div class="specialOfferBox">
            <div class="forImage">
                <img src="~/Content/forHomePage/nfs.jpg" alt="image" />
            </div>
            <div class="forPrice">

            </div>
        </div>

    </div>


    @*special offer contain ends*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 4
                }
            }
        })
    </script>
</body>
</html>

